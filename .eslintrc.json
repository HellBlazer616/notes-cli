{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "quotes": [1, "backtick", {
            "avoidEscape": true
        }],
        "indent": [1, "tab"],
        "no-tabs": ["error", {
            "allowIndentationTabs": true
        }],
        "no-unused-vars": ["warn"],
        "no-debugger": ["warn"]
    }
}